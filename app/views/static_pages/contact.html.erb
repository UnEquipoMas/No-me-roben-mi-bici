

<%= form_for @contact, url: contact_path do |message_form| %>
    <fieldset>
      <div class="field">
        <%= message_form.text_field :name, placeholder: "Nombre" %>
      </div>

      <div class="field">
        <%= message_form.email_field :email, placeholder: "Correo"%>
      </div>

      <div class="field">
        <%= message_form.text_area :content, placeholder: "Mensaje", class:"form-control name=mensaje"%>
      </div>
    </fieldset>

    <fieldset>
      <div class="field">
        <%= message_form.submit 'Enviar', class: 'btn btn-primary'  %>
      </div>
    </fieldset>
<% end %>

  <div id="formulario">
        <form class="form-inline" role="form" action="php/contacto.php" method="POST" id="contacto" title="Nombre">
        <label for="nombre">Nombre</label>
        <input class="form-control name=" name="nombre" type="text" required="required" id="nombre" placeholder="nombre" tabindex="1" title="Nombre">
        <br>
        <label for="email">Email</label>
        <input class="form-control name=" name="email" type="email" required="required" id="email" placeholder="email" tabindex="2" title="Email">
        <br>
        <label for="Mensaje">Mensaje</label>
        <textarea class="form-control name=" name="mensaje" rows="7" id="mensaje" placeholder="mensaje" tabindex="10"></textarea>
        <br>
        <input class="btn btn-primary" type="submit" name="enviar" tabindex="7" value="Enviar"><input type="reset" tabindex="8" class="btn btn-primary" value="Borrar">
        <input type="hidden" name="estado" value="1">
        
        </form>
    </div>
   <div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px; margin: -350px 0 0 300px'></div>
</div>
<script type="text/javascript">
  handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers([
    {
      "lat": 4.6482975,
      "lng": -74.107807,
      "infowindow": "Robo 1: Bicicleta GW",
    }
  ]);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
  handler.getMap().setZoom(12);
});
</script>
