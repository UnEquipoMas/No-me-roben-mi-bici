
  <div class = "panel panel-default formulario" >
    <div class="headm">
      <div class ="panel-heading">
        <h2>Registro de usuario</h2>
      </div>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             
    </div>
    <div class ="form1">
      <div class ="panel-body" >
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
        
        <div class="row-xs-4">
          <div class="field form-group casillas">
            <%= f.label :Nombre %>
            <%= f.text_field :name, autofocus: true, class: 'form-control' %>
          </div>
        </div>
        <br>
        <div class="row-xs-4">
          <div class="field form-group casillas">
            <%= f.label :Correo_electrónico %>
            <%= f.email_field :email, autofocus: true, class: 'form-control'%>
          </div>
        </div>
        <br>
          <div class="field form-group casillas">
            <%= f.label :Contraseña,'Contraseña'  %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> Caracteres mínimos)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "off" , class: 'form-control' %>
          </div>  
          <br>
          <div class="field form-group casillas">
            <%= f.label :Confirmar_contraseña %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
          </div>
          <br>
          <div class="actions center">
            <%= f.submit 'Registrar' , class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
      </div>
    </div>
    <div class ="panel-footer">
      <%= render 'devise/shared/links' %>
    </div>
  </div>

