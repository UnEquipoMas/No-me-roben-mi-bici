  

<body class="logreg">
  
  <%= render :partial=> 'layouts/sidebar'%>
  
  <div class="form-box">
            <div class="form-pass">
              <div class="form-top-left1">
      <h4>Editar <%= resource_name.to_s.humanize %></h4>
    </div>  
  </div>  
  <div class="form-bottompass">
    <div class ="form-group">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
    <div class="round-image-50"><%= image_tag(current_user.avatar.url(:thumb)) %></div>
     <div class="form-group">
        <h4><%= f.label :avatar, class: 'col-sm-2 control-label'  %></h4>
        <div class="col-sm-6">
            <%= f.file_field :avatar,class:'btn'%>
        </div>
    </div>
    <br/>
<div class="form-group">
    <h4><%= f.label :Name %></h4>
    <%= f.text_field :name, autofocus: true , class: 'form-control' %>
  </div>
      <div class="form-group">
       <h4> <%= f.label :Correo_electronico %></h4>
        <%= f.email_field :email, autofocus: true , class: 'form-control',disabled: true%>
      </div>
      
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    
      <div class="form-group">
       <h4> <%= f.label :Nueva_contrasena %></h4> <i>(Dejelo en blanco si no desea cambiarlo)</i><br />
        <%= f.password_field :password, autocomplete: "off" , class: 'form-control'%>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> caracteres minimo</em>
        <% end %>
      </div>
      <div class="form-group">
        <h4><%= f.label :Confirmar_contrasena %></h4>
        <%= f.password_field :password_confirmation, autocomplete: "off" , class: 'form-control' %>
      </div>
      <div class="form-group">
        <h4><%= f.label :Contrasena_actual%></h4> <i>(Es necesaria tu contrase√±a actual para guardar los cambios)</i><br />
        <%= f.password_field :current_password, autocomplete: "off" , class: 'form-control' %>
      </div>
     <br />
      <div class="actions center">
        <%= f.button "Actualizar Perfil" , class: 'btn' %>
      </div>
  
    <% end %>
  </div>
<%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Estas seguro?" }, method: :delete %>

<%= link_to "Atras", :back %><br/>

    

    <%= render "devise/shared/links" %>
    </div>
    </div>
</body>

