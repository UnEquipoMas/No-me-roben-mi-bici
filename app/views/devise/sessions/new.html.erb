        <div class="col-sm-1 middle-border"></div>
        <div class="col-sm-1"></div>

        <div class="col-sm-5">

          <div class="form-box">
            <div class="form-top">
              <div class="form-top-left">
                <h3>Registrate ya!</h3>
                <p>Llena el siguiente formulario para ser parte de nuestra comunidad</p>
              </div>
              <div class="form-top-right">
                <i class="fa fa-pencil"></i>
              </div>
            </div>
            <div class="form-bottom">


                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class:'registration-form'}) do |f| %>
                  <%= devise_error_messages! %>
                <div class="form-group">
                  <%= f.label :Nombre, class:'sr-only' %>
                  <%= f.text_field :name, type:'text', autofocus: true, class: 'form-first-name form-control', placeholder:'Nombre' %>
                </div>

                <div class="form-group">
                  <%= f.label :Correo_electrónico, class:'sr-only'%>
                  <%= f.email_field :email, autofocus: true, class: 'form-email form-control',type:'text',placeholder:'Correo'%>
                </div>

                <div class="form-group">
                  <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> Caracteres mínimos)</em>
                  <% end %>
                  <%= f.password_field :password, autocomplete: 'off' , class: 'form-control',placeholder:'Contraseña' %>
                </div>

                  <div class="form-group ">
                    <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control',placeholder:'Confirmar contraseña' %>
                  </div>

                  <%= f.button 'Registrar' , class: 'btn ',type:'submit' %>
              <% end%>
