<% content_for :for_head do %>
    <script src="//maps.google.com/maps/api/js?key=AIzaSyArQg_t02w-2L_JXXjn-ug045OlQ0s6Y9M"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'>
    </script> <!-- only if you need custom infoboxes -->
<% end %>
<body class="logreg">

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="form-top">
        <%= form_for @contact,:html => {:class => 'form-horizontal'}, url: contact_path do |message_form| %>

          <fieldset>
            <legend class="text-center legend">Contáctanos</legend>
            <div class="form-group">
              <div class="col-md-10 col-md-offset-1">
                <%= message_form.text_field :name, placeholder: "Nombre Completo", class:'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-10 col-md-offset-1">
                <%= message_form.email_field :email, placeholder: "Correo electrónico", class:'form-control'%>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-10 col-md-offset-1">
                <%= message_form.text_field :phone, placeholder: 'Teléfono', class:'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-10 col-md-offset-1">
                <%= message_form.text_area :content, placeholder: 'Escriba aquí su mensaje. Le responderemos en 2 días laborales hábiles.', class:'form-control mensaje', rows:'7'%>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-12 text-center">
                <%= message_form.button 'Enviar', class:'btn btn-primary' %>
                <%= button_tag 'Limpiar', type: :reset,class:'btn btn-primary'%>

              </div>
            </div>
          </fieldset>
        <% end %>
      </div>
    </div>
    <div class="col-md-6">
      <div>
        <div class="form-top">
          <legend class="text-center legend">Nuestras Oficinas</legend>
          <div class="panel-body text-center">
            <h4 class="letrablanca">Dirección</h4>
            <div class="letrablanca">
              2217 Washington Blvd<br />
              Washington DC<br />
              #(703) 1234 1234<br />
              service@company.com<br />
            </div>
            <hr />

             <div id="map" class='map'>

             </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<script src="http://maps.google.com/maps/api/js?sensor=false"></script>

<script type="text/javascript">
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
        markers = handler.addMarkers([
            {
                "lat": 4.6482975,
                "lng": -74.107807,
                "infowindow": "Robo 1: Bicicleta GW",
            }
        ]);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        handler.getMap().setZoom(12);
    });
</script>


</body>


