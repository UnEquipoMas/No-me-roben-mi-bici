<h3 style='color:white'>Este reporte tiene <%= pluralize(@comments.count, "comentario") %> </h3>

<% @comments.each do |comment| %>
<p style='text-align:left; color:#fff'> <b><%= comment.user.email  %> </b> dijo: <%= comment.content  %> </p>
  <% if current_user == comment.user %>
      <%= link_to 'Eliminar Comentario', [comment.report,comment], method: :delete %>
      <%= link_to 'Editar Comentario', edit_report_comment_path(comment.report,comment) %>
  <% end %>
<% end %>

<%= render 'comments/form'%>